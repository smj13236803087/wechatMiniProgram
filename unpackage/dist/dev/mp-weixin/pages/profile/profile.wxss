
.container.data-v-dd383ca2 {
		min-height: 100vh;
		background: linear-gradient(to bottom, #f5f7fa 0%, #ffffff 100%);
}
	
	/* 未登录状态 */
.login-section.data-v-dd383ca2 {
		padding: 100rpx 40rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: calc(100vh - 200rpx);
}
.login-card.data-v-dd383ca2 {
		width: 100%;
		max-width: 600rpx;
		background: #ffffff;
		border-radius: 32rpx;
		padding: 80rpx 60rpx;
		box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
		text-align: center;
}
.login-icon.data-v-dd383ca2 {
		font-size: 120rpx;
		margin-bottom: 40rpx;
}
.login-title.data-v-dd383ca2 {
		font-size: 48rpx;
		font-weight: bold;
		color: #333;
		margin-bottom: 20rpx;
}
.login-desc.data-v-dd383ca2 {
		font-size: 28rpx;
		color: #999;
		margin-bottom: 60rpx;
}
.wechat-login-btn.data-v-dd383ca2 {
		width: 100%;
		height: 96rpx;
		background: linear-gradient(135deg, #07c160, #06ad56);
		color: #ffffff;
		font-size: 32rpx;
		font-weight: 600;
		border-radius: 48rpx;
		border: none;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}
.wechat-login-btn.data-v-dd383ca2:active {
		transform: scale(0.98);
}
.wechat-login-btn[disabled].data-v-dd383ca2 {
		opacity: 0.6;
}
	
	/* 已登录状态 */
.user-section.data-v-dd383ca2 {
		padding-bottom: 40rpx;
}
.user-header.data-v-dd383ca2 {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 60rpx 40rpx 80rpx;
		display: flex;
		align-items: center;
		gap: 30rpx;
}
.avatar-wrapper.data-v-dd383ca2 {
		position: relative;
}
.avatar.data-v-dd383ca2 {
		width: 120rpx;
		height: 120rpx;
		border-radius: 50%;
		border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.avatar-placeholder.data-v-dd383ca2 {
		width: 120rpx;
		height: 120rpx;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.2);
		border: 4rpx solid rgba(255, 255, 255, 0.3);
		display: flex;
		align-items: center;
		justify-content: center;
}
.avatar-text.data-v-dd383ca2 {
		font-size: 48rpx;
		font-weight: bold;
		color: #ffffff;
}
.user-info.data-v-dd383ca2 {
		flex: 1;
}
.user-name.data-v-dd383ca2 {
		font-size: 40rpx;
		font-weight: bold;
		color: #ffffff;
		margin-bottom: 12rpx;
}
.user-email.data-v-dd383ca2 {
		font-size: 26rpx;
		color: rgba(255, 255, 255, 0.8);
}
	
	/* 功能菜单 */
.menu-section.data-v-dd383ca2 {
		margin: -40rpx 30rpx 30rpx;
		background: #ffffff;
		border-radius: 24rpx;
		box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
		overflow: hidden;
}
.menu-item.data-v-dd383ca2 {
		display: flex;
		align-items: center;
		padding: 32rpx 30rpx;
		border-bottom: 1rpx solid #f5f5f5;
		transition: background 0.2s;
}
.menu-item.data-v-dd383ca2:last-child {
		border-bottom: none;
}
.menu-item.data-v-dd383ca2:active {
		background: #f8f8f8;
}
.menu-icon.data-v-dd383ca2 {
		font-size: 48rpx;
		width: 80rpx;
		height: 80rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #f5f7fa;
		border-radius: 16rpx;
		margin-right: 24rpx;
}
.menu-content.data-v-dd383ca2 {
		flex: 1;
}
.menu-title.data-v-dd383ca2 {
		font-size: 32rpx;
		font-weight: 500;
		color: #333;
		margin-bottom: 8rpx;
}
.menu-desc.data-v-dd383ca2 {
		font-size: 24rpx;
		color: #999;
}
.menu-arrow.data-v-dd383ca2 {
		font-size: 40rpx;
		color: #ccc;
		margin-left: 20rpx;
}
	
	/* 退出登录 */
.logout-section.data-v-dd383ca2 {
		padding: 0 30rpx;
		margin-top: 30rpx;
}
.logout-btn.data-v-dd383ca2 {
		width: 100%;
		height: 88rpx;
		background: #ffffff;
		color: #ff4757;
		font-size: 32rpx;
		font-weight: 500;
		border-radius: 24rpx;
		border: 1rpx solid #ffebee;
		display: flex;
		align-items: center;
		justify-content: center;
}
.logout-btn.data-v-dd383ca2:active {
		background: #ffebee;
}
